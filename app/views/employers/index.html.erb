<h1>Listing employers</h1>

<table>
  <tr>
    <th>Empid</th>
    <th>Phone</th>
    <th>Mobile</th>
    <th>Address</th>
    <th>Location</th>
    <th>Industry</th>
    <th>Function</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employers.each do |employer| %>
  <tr>
    <td><%= employer.EmpId %></td>
    <td><%= employer.Phone %></td>
    <td><%= employer.Mobile %></td>
    <td><%= employer.address %></td>
    <td><%= employer.location %></td>
    <td><%= employer.Industry %></td>
    <td><%= employer.function %></td>
    <td><%= link_to 'Show', employer %></td>
    <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
    <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

